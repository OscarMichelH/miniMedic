= form_with(model: person, local: true) do |form|
  - if person.errors.any?
    #error_explanation
      %h2
        = pluralize(person.errors.count, "error")
        prohibited this person from being saved:
      %ul
        - person.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :firstname
    = form.text_field :firstname, id: :person_firstname
  .field
    = form.label :lastname
    = form.text_field :lastname, id: :person_lastname
  .field
    = form.label :dob
    = form.date_select :dob, id: :person_dob
  .field
    = form.label :gender
    = form.text_field :gender, id: :person_gender
  .actions
    = form.submit
