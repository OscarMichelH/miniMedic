= form_for @treatment do |f|
  - if @treatment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@treatment.errors.count, "error")} prohibited this treatment from being saved:"
      %ul
        - @treatment.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :patient_id
    = collection_select(:treatment, :patient_id, Patient.all, :id, :firstname,{}, prompt: true)
  .field
    = f.label :doctor_id
    = collection_select(:treatment, :doctor_id, Doctor.all, :id, :firstname,{}, prompt: true )
  .field
    = f.label :duration
    = f.text_field :duration
  .field
    = f.label :medicaments
    = f.text_field :medicaments
  .field
    = f.label :prescription
    = f.text_field :prescription
  .actions
    = f.submit 'Save'
